<div class="profile-background">
  <% if @user.background_image.present? %>
    <%= cl_image_tag @user.background_image.key, class: "profile-background-img" %>
  <% else %>
    <%= image_tag ("user-background-default.jpg"), class: "profile-background-img" %>
  <% end %>
</div>

<div class="container container-margin">
  <div class="section align-center profile-about-me">
    <% if @user.avatar.present? %>
      <%= cl_image_tag @user.avatar.key, class: "profile-face" %>
    <% end %>
    <h2>About me</h2>
    <div>
      <%# <p>Gender: <%= @user.gender %><%#</p> %>
      <p class="profile-bio"><%= @user.bio %></p>
    </div>
    <% if @user === current_user %>
      <%= link_to "Edit Profile", edit_user_registration_path, class: "button" %>
    <% end %>
  </div>
  <div style="width: 100%">
    <h1><%= @user.first_name %> <%= @user.last_name %></h1>
    <div class="post-feed">
      <% if @user == current_user %>
        <%= render "createpost" %>
      <% end %>
      <%= render "feed" %>
    </div>
  </div>
</div>
