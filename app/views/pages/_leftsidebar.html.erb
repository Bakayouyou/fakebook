<div class="section-left">
  <h3>Online users:</h3>
  <% @users.each do |user| %>
    <input type="checkbox" id="modalToggle" />
      <label for="modalToggle" id="openModal"></label>
      <div class="modal">
        <%= render partial: 'chatrooms/messages', locals: { message: @message, current_user: current_user, user: @user, chatroom: @chatroom} %>
      </div>
    <%= link_to profile_path(user.id) do %>
      <div class="contact-card">
        <% if user.avatar.present? %>
          <%= cl_image_tag user.avatar.key, class: "contact-profile" %>
        <% end %>
        <p><%= user.first_name %> <%= user.last_name %></p>
        <%= link_to 'Voir la conversation', chatroom_path(user.id) %>
      </div>
    <% end %>
  <% end %>
</div>
