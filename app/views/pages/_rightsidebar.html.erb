<div class="section-right">
  <h3>Pages</h3>
  <% @pages.each do |page| %>
    <%= link_to page_path(page) do %>
      <div class="contact-card">
        <% if page.avatar.present? %>
          <%= cl_image_tag page.avatar.key, class: "contact-profile" %>
        <% end %>
        <p><%= page.name %></p>
      </div>
    <% end %>
  <% end %>
  <h3>Contacts:</h3>
  <% @users.each do |user| %>
    <div class="contact-card" data-user-id="<%= user.id %>" data-action="click->modal#toggle">
      <% if user.avatar.present? %>
        <%= cl_image_tag user.avatar.key, class: "contact-profile" %>
      <% end %>
      <p><%= user.first_name %> <%= user.last_name %></p>
      <div class="<%= current_user.notifications.unread.count > 0 ? 'notification-bell' : '' %>">
        <% if @notifications.unread %>
          <i class="fa fa-bell"></i>
          <span class="<%= current_user.notifications.unread.count > 0 ? 'notification-count' : '' %>"><%= @notifications_by_user[user.id] %></span>
      </div>
        <% else %>
          <%= @notifications_by_user[user.id] = 0 %>
        <% end %>
    </div>
  <% end %>
</div>

<%= console %>
