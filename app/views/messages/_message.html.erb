
<%# <i><%= message.created_at.strftime("%a %b %e at %l:%M %p") %><%#</i> %>
<div class="message <%= message.user.id == current_user.id ? 'message-current-user' : '' %>" id="message-<%= message.id %>">
  <% unless message.user === current_user %>
    <div class="chatroom-avatar">
      <% if message.user && message.user.avatar.attached? %>
      <%= image_tag message.user.avatar , class:"avatar-img" %>
      <% else %>
      <!-- GÃ©rer le cas oÃ¹ l'utilisateur n'a pas d'avatar -->
      <%= image_tag ("user-profile-default.jpg"), class:"avatar-img" %>
      <% end %>
    </div>
  <% end %>
  <div class="message-content <%= message.user.id == current_user.id ? 'message-content-current-user' : '' %>" >
    <p ><%= message.content %></p>
    <% if message.message_image.attached? %>
      <%= cl_image_tag message.message_image.key, class: "post-image"  %>
    <% end %>
  </div>
